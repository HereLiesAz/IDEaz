<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions" />

    <!-- REMOVED: android.permission.BIND_ACCESSIBILITY_SERVICE from uses-permission
         This caused the "Permission is only granted to system apps" error. -->

    <!-- Required for Android 9+ to use startForeground -->
    <!-- Required for Android 14+ to use specific foreground types -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />

    <!--
         Required for Android 11+ (API 30+) to detect installed apps.
         We query for any app that has a launcher activity, so we can launch
         the apps we build.
    -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IDEaz"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.IDEaz">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BubbleActivity"
            android:label="@string/app_name"
            android:allowEmbedded="true"
            android:documentLaunchMode="always"
            android:resizeableActivity="true"
            android:theme="@style/Theme.IDEaz" />

        <activity
            android:name=".ui.web.WebRuntimeActivity"
            android:exported="false"
            android:label="Web Preview"
            android:theme="@style/Theme.IDEaz" />

        <!--
             BuildService requires 'dataSync' on Android 14+
             because it performs long-running processing/compilation.
        -->
        <service
            android:name=".services.BuildService"
            android:exported="false"
            android:foregroundServiceType="dataSync">
            <intent-filter>
                <action android:name="com.hereliesaz.ideaz.BUILD_SERVICE" />
            </intent-filter>
        </service>

        <service
            android:name=".services.UIInspectionService"
            android:exported="false" />

        <service
            android:name=".services.ScreenshotService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

    </application>

</manifest>